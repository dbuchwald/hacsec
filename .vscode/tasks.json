{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "(Re)build banking app",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "linux": {
        "command": "./build.sh"
      },
      "osx": {
        "command": "./build.sh"
      },
      "windows": {
        "command": "build.bat"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "(Re)start banking app",
      "dependsOn": "(Re)build banking app",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "linux": {
        "command": "./start.sh"
      },
      "osx": {
        "command": "./start.sh"
      },
      "windows": {
        "command": "start.bat"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Stop banking app",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "linux": {
        "command": "./stop.sh"
      },
      "osx": {
        "command": "./stop.sh"
      },
      "windows": {
        "command": "stop.bat"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Full rebuild banking app",
      "dependsOn": ["(Re)start banking app", "Destroy banking app"],
      "problemMatcher": []
    },
    {
      "label": "Destroy banking app",
      "dependsOn": "Stop banking app",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "linux": {
        "command": "./destroy.sh"
      },
      "osx": {
        "command": "./destroy.sh"
      },
      "windows": {
        "command": "destroy.bat"
      },
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Observe docker log files",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "command": "docker-compose",
      "args": [
        "logs",
        "-f"
      ],
      "group": "none",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run all API tests",
      "type": "npm",
      "script": "test",
      "path": "app/bank-api/",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run all API tests (via Intercepting Proxy)",
      "type": "npm",
      "script": "test-intercept",
      "path": "app/bank-api/",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}